@model Project_CarRental.Models.Post;

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index","Home")">Trang chủ <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2">Tin tức </span></p>
                <h1 class="mb-3 bread">Tin tức</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                <h2 class="mb-3">@Html.DisplayFor(model => model.Title)</h2>
                <p class="text-justify">@Html.Raw(Model.Contents)</p>
                <p>
                    <img src="@Html.Raw(Model.Images)" alt="" class="img-fluid">
                </p>
                <div class="tag-widget post-tag-container mt-3">
                    <div class="tagcloud">
                        <a class="tag-cloud-link">Life</a>
                        <a class="tag-cloud-link">Sport</a>
                        <a class="tag-cloud-link">Tech</a>
                        <a class="tag-cloud-link">Travel</a>
                    </div>
                </div>


                @await Component.InvokeAsync("ViewComment", Model.PostID)


                <div class="comment-form-wrap pt-5">
                    <h3 class="mb-5">Leave a comment</h3>
                    <form action="SendMessage" method="post" class="p-5 bg-light">

                        <!-- <div class="form-group d-none">
                            <input asp-for="" class="form-control"></input>
                        </div> -->
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea cols="30" rows="10" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                        </div>
                    </form>
                </div>

            </div> <!-- .col-md-8 -->
            <div class="col-md-4 sidebar ftco-animate">
                <div class="sidebar-box">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon icon-search"></span>
                            <input type="text" class="form-control" placeholder="Nhập từ khóa...">
                        </div>
                    </form>
                </div>
                <div class="sidebar-box ftco-animate">
                    <div class="categories">
                        <h3>Thuê xe</h3>
                        <li><a href="@Url.Action("Index","FourSeats")">4 chỗ <span>(9)</span></a></li>
                        <li><a href="@Url.Action("Index","SevenSeats")">7 chỗ <span>(6)</span></a></li>
                        <li><a href="">9 chỗ <span>(6)</span></a></li>
                    </div>
                </div>

                @await Component.InvokeAsync("RecentPost")

            </div>

        </div>
    </div>
</section> <!-- .section -->