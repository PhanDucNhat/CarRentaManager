@using Project_CarRental.Models;
@using Project_CarRental.Utilities;
@model IList<ViewProduct>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Dịch vụ thật sự khác biệt</span>
                <h2 class="mb-2">Thuê xe</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    @foreach (var item in Model)
                    {
                        string url = Functions.TitleSlugGeneration("product", item.CarName, item.ProductID);
                        string arl = Functions.TitleSlugGeneration("booknow", item.CarName, item.ProductID);
                        <div class="item">
                            <div class="car-wrap rounded ftco-animate">
                                <div class="img rounded d-flex align-items-end" style="background-image: url(@item.Images);">
                                </div>
                                <div class="text">
                                    <h2 class="mb-0"><a href="#">@item.CarName</a></h2>
                                    <div class="d-flex mb-1">
                                        <span class="cat">Giá</span>
                                        <p class="price ml-auto">@item.PricesDay <span>/ngày</span></p>
                                    </div>
                                    <div class="d-flex mb-2">
                                        <span class="cat">Số ghế</span>
                                        <p class="price ml-auto">@item.Seats</p>
                                    </div>
                                    <p class="d-flex mb-0 d-block"><a href="/@arl" class="btn btn-primary py-2 mr-1">Đặt ngay</a> <a href="/@url" class="btn btn-secondary py-2 ml-1">Chi tiết</a></p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>