@using Project_CarRental.Models;
@using Project_CarRental.Utilities;
@model IList<ViewProduct>

<div class="col-md-7">
	<h3 class="head">Reviews</h3>
	@foreach (var item in Model)
	{
		<div class="review d-flex">
			<div class="user-img" style="background-image: url(@item.Avatar)"></div>
			<div class="desc">
				<h4>
					<span class="text-left">@item.FullName</span>
					<span class="text-right">@item.CreateDate.Value.ToString("dd-MM-yyyy")</span>
				</h4>
				<p class="star">
					<span>
						@for (int i = 0; i < @item.RangeStar; i++)
						{
							<i class="fa-solid fa-star" style="color: #01d28e;"></i>
						}
					</span>
					<span class="text-right"><a href="#" class="reply"><i class="icon-reply"></i></a></span>
				</p>
				<p>@item.Abstract</p>
			</div>
		</div>
	}
</div>