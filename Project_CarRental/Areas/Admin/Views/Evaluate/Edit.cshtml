@model Project_CarRental.Models.Evaluate

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận sửa đánh giá</h2>
	</div>
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Sửa đánh giá</h2>
		</div>
		<form method="post" asp-action="Edit">
			<div asp-validation-summary="All"></div>
			<div class="form-row">
				<input type="text" class="form-control mb-3" asp-for="EvaluateID" type="hidden">
				<div class="form-group col-md-6">
					<label asp-for="UserID">Mã người dùng</label>
					<input type="text" class="form-control mb-3" asp-for="UserID" readonly>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="ProductID">Mã xe</label>
					<input type="text" class="form-control mb-3" asp-for="ProductID" readonly>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Abstract">Đánh giá</label>
					<textarea type="text" class="form-control mb-3" asp-for="Abstract" readonly></textarea>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="CreateDate">Ngày đánh giá</label>
					<input type="text" class="form-control mb-3" asp-for="CreateDate" readonly>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="RangeStar">Số sao đánh giá</label>
					<input type="text" class="form-control mb-3" asp-for="RangeStar" readonly>
				</div>
				<div class="form-group mt-2 mb-3">
					<label>
						@Html.CheckBox("IsActive", false)
						Hiển thị
					</label>
				</div>
				<div class="form-group d-none">
					<input asp-for="Status" class="form-control" readonly />
				</div>
				<div class="form-group d-none">
					<input asp-for="Category" class="form-control" readonly />
				</div>
			</div>
			<a href="javascript:history.back()" class="btn btn-lg btn-warning p2 mr5"><i class="bi bi-arrow-left-circle"></i>Quay lại</a>
			<button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu lại</button>
		</form>
	</div>
</main>