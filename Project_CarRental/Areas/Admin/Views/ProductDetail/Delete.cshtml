@model Project_CarRental.Models.ProductDetail

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận xóa xe</h2>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="ProductDetailID">Mã chi tiết xe</label>
			<input type="text" class="form-control mb-3" asp-for="ProductDetailID" disabled>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="ProductID">Mã xe</label>
			<input type="text" class="form-control mb-3" asp-for="ProductID" disabled>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="Images">Ảnh</label>
			<input type="text" class="form-control mb-3" asp-for="Images" disabled>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="PricesDay">Giá thuê ngày/VNĐ</label>
			<input type="text" class="form-control mb-3" asp-for="PricesDay" disabled>
		</div>
	</div>

	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="ProductDetailID" />
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-left-circle"></i>Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i>Xóa thông tin xe
		</button>
	</form>
</main>