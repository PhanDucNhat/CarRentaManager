@model Project_CarRental.Models.Product

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận sửa thông tin xe</h2>
	</div>
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Sửa thông tin xe</h2>
		</div>
		<form method="post" asp-action="Edit">
			<div asp-validation-summary="All"></div>
			<div class="form-row">
				<input type="text" class="form-control mb-3" asp-for="ProductID" type="hidden">
				<div class="form-group col-md-6">
					<label asp-for="CarName">Tên xe</label>
					<input type="text" class="form-control mb-3" asp-for="CarName" placeholder="Nhập tên xe">
					<span asp-validation-for="CarName" class="alert-danger"></span>
				</div>
				<div class="form-group col-md-6 mt-2">
					<div class="alert-danger" asp-validation-summary="ModelOnly"></div>
					<label asp-for="MenuID">Thuộc menu</label>
					<select asp-for="MenuID"
							class="form-control"
							asp-items="@(new SelectList(ViewBag.mnList,"Value","Text"))">
					</select>
				</div>
				<div class="form-group mt-2 mb-3">
					<label>
						@Html.CheckBox("IsActive", false)
						Hiển thị
					</label>
				</div>
				<div class="form-group d-none">
					<input asp-for="Category" class="form-control" readonly />
				</div>
			</div>
			<a href="javascript:history.back()" class="btn btn-lg btn-warning p2 mr5"><i class="bi bi-arrow-left-circle"></i>Quay lại</a>
			<button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu lại</button>
		</form>
	</div>
</main>