@model Project_CarRental.Models.Product

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận xóa xe</h2>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="ProductID">Mã xe</label>
			<input type="text" class="form-control mb-3" asp-for="ProductID" disabled>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="CarName">Tên xe</label>
			<input type="text" class="form-control mb-3" asp-for="CarName" disabled>
		</div>
	</div>

	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="ProductID" />
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-left-circle"></i>Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i>Xóa xe
		</button>
	</form>
</main>