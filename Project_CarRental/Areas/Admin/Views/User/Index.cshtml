@using Project_CarRental.Models;
@model IList<User>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách người dùng</h2>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-2 text-center">Họ và tên</th>
                                    <th class="col-2 text-center">Email</th>
                                    <th class="col-2 text-center">Địa chỉ</th>
                                    <th class="col-2 text-center">Số điện thoại</th>
                                    <th class="col-1 text-center">Ngày tạo</th>
                                    <th class="col-1 text-center">Ẩn/Hiện</th>
                                    <th class="col-1 text-center">Chức năng</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.UserID</th>
                                        <td><a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-id="@item.UserID" class="text-primary">@item.FullName</a></td>
                                        <td class="text-center">@item.Email</td>
                                        <td class="text-center">@item.Address</td>
                                        <td class="text-center">@item.Phone</td>
                                        <td class="text-center">@item.CreateDate.Value.ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">@item.IsActive</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.UserID" class="btn btn-primary btn-sm" title="Sửa người dùng"><i class="bi bi-pencil"></i></a>
                                            <a asp-area="Admin" asp-controller="Service" asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-danger btn-sm" title="Xóa người dùng"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>