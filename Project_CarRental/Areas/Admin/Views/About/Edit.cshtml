@model Project_CarRental.Models.About

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận sửa giới thiệu</h2>
	</div>
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Sửa giới thiệu</h2>
		</div>
		<form method="post" asp-action="Edit">
			<div asp-validation-summary="All"></div>
			<div class="form-row">
				<input type="text" class="form-control mb-3" asp-for="AboutID" type="hidden">
				<div class="form-group col-md-6">
					<label asp-for="Title">Tên tiêu đề</label>
					<input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập tiêu đề">
					<span asp-validation-for="Title" class="alert-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Contents">Nội dung</label>
					<textarea asp-for="Contents" class="form-control" placeholder="Nhập nội dung"></textarea>
				</div>
				<div class="form-btn-group col-md-6 mt-2">
					<label class="control-label">Ảnh</label>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
						</div>
						<input type="text" class="form-control" asp-for="Images" id="file-input" aria-describedby="button-addon2">
					</div>
				</div>
				<div class="form-group mt-2 mb-3">
					<label>
						@Html.CheckBox("IsActive", false)
						Hiển thị
					</label>
				</div>
				<div class="form-group d-none">
					<input asp-for="MenuID" class="form-control" readonly />
				</div>
			</div>
			<a href="javascript:history.back()" class="btn btn-lg btn-warning p2 mr5"><i class="bi bi-arrow-left-circle"></i>Quay lại</a>
			<button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu lại</button>
		</form>
	</div>
</main>