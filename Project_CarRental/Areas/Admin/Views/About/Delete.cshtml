@model Project_CarRental.Models.About

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận xóa giới thiệu</h2>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="AboutID">Mã giới thiệu</label>
			<input type="text" class="form-control mb-3" asp-for="AboutID" disabled>
		</div>
		<div class="form-group col-md-6">
			<label asp-for="Title">Tiêu đề</label>
			<input type="text" class="form-control mb-3" asp-for="Title" disabled>
		</div>
	</div>

	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="AboutID" />
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-left-circle"></i>Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i>Xóa giới thiệu
		</button>
	</form>
</main>