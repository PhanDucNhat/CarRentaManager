@using Project_CarRental.Utilities;
@model Project_CarRental.Models.Post

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận thêm bài viết</h2>
	</div>
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Thêm mới bài viết</h2>
		</div>
		<form asp-action="Create" method="post">
			<div class="form-row">
				<div class="form-group col-md-6">
					<label asp-for="MenuID">Chọn mục</label>
					<select asp-for="MenuID" class="form-control" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))"></select>
					<span asp-validation-for="MenuID" class="alert-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Title">Tiêu đề</label>
					<input type="text" class="form-control md-3" asp-for="Title" placeholder="Nhập tiêu đề">
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Abstract">Tóm tắt</label>
					<input type="text" class="form-control md-3" asp-for="Abstract" placeholder="Tóm tắt nội dung">
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Contents">Nội dung</label>
					<textarea asp-for="Contents" class="form-control" placeholder="Nhập nội dung"></textarea>
				</div>
				<div class="form-btn-group col-md-6">
					<label class="control-label">Ảnh</label>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
						</div>
						<input type="text" class="form-control" asp-for="Images" id="file-input" aria-describedby="button-addon2">
					</div>
				</div>
				<div class="form-group mt-2 mb-3">
					<label>
						@Html.CheckBox("IsActive", false)
						Hiển thị
					</label>
				</div>
				<div class="form-group d-none">
					<input asp-for="Author" class="form-control" value="Admin" />
				</div>
				<div class="form-group d-none">
					<input asp-for="CreateDate" class="form-control" value="@Functions.getCurrentDate()" />
				</div>
				<div class="form-group d-none">
					<input asp-for="Category" class="form-control" value="1" />
				</div>
			</div>
			<a asp-controller="Post" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
			<button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
		</form>
	</div>
</main>

@{
	var summerNote = new Project_CarRental.Areas.Admin.Models.SummerNote("#Contents");
	<partial name="_SummerNote" model="summerNote" />
}